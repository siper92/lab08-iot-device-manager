APP_NAME=Lab08_measure_api
APP_ENV=local
APP_KEY=base64:secret-key-change-in-production
APP_DEBUG=true
APP_URL=http://localhost

################
# Lab08 specific
################
APP_PAGE_LIMIT=10
# disable Kafka for measurements for testing to store measurements directly in the DB
APP_USE_KAFKA_FOR_MEASUREMENTS=true

################

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

JWT_SECRET=base64:your-jwt-secret-key-here-change-in-production
JWT_TTL=3600

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_GENERAL_PATH=/app/logs/general.log
LOG_ERROR_PATH=/app/logs/error.log

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=lab08
DB_USERNAME=lab08
DB_PASSWORD=lab08

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=kafka

CACHE_STORE=redis
CACHE_PREFIX=lab08_cache

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

KAFKA_BROKERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=lab08_measure_api
KAFKA_QUEUE_TOPIC=default

ALERT_MIN_TEMPERATURE=0
ALERT_MAX_TEMPERATURE=30

VITE_APP_NAME="${APP_NAME}"

###############
# Kafka Config
###############

# Zookeeper Configuration
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Kafka Broker Configuration
KAFKA_BROKER_ID=1
KAFKA_ADVERTISED_HOST=kafka
KAFKA_ADVERTISED_PORT=9092

# Kafka Topic Configuration
KAFKA_AUTO_CREATE_TOPICS=true
KAFKA_DEFAULT_PARTITIONS=3
KAFKA_DEFAULT_REPLICATION_FACTOR=1

# Kafka Retention Configuration
KAFKA_LOG_RETENTION_HOURS=168
KAFKA_LOG_RETENTION_BYTES=1073741824

# Kafka UI Configuration
KAFKA_UI_PORT=8080

